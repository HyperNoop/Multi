// Calculatrice simple en Multi

fonction addition(a, b) {
    retourner a + b
}

fonction soustraction(a, b) {
    retourner a - b
}

fonction multiplication(a, b) {
    retourner a * b
}

fonction division(a, b) {
    si b == 0 {
        afficher "Erreur: division par z√©ro"
        retourner 0
    }
    retourner a / b
}

